<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.kidsdrawingapp.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/view_background_layout"
        app:layout_constraintBottom_toTopOf="@id/llPaintColors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    TODO  increase colors number buy adding color picker into app   -->

    <LinearLayout
        android:id="@+id/llPaintColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ibBrush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawingView">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/skin"
            android:tag="@color/skin"
            android:onClick="paintClicked"
            android:contentDescription="@string/skin_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:tag="@color/black"
            android:onClick="paintClicked"
            android:contentDescription="@string/black_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/red"
            android:tag="@color/red"
            android:onClick="paintClicked"
            android:contentDescription="@string/red_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/green"
            android:tag="@color/green"
            android:onClick="paintClicked"
            android:contentDescription="@string/green_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:tag="@color/blue"
            android:onClick="paintClicked"
            android:contentDescription="@string/blue_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/yellow"
            android:tag="@color/yellow"
            android:onClick="paintClicked"
            android:contentDescription="@string/yellow_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/lollipop"
            android:tag="@color/lollipop"
            android:onClick="paintClicked"
            android:contentDescription="@string/lollipop_color"
            android:src="@drawable/pallet_normal" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/pink"
            android:tag="@color/pink"
            android:onClick="paintClicked"
            android:contentDescription="@string/pink_color"
            android:src="@drawable/pallet_normal" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/ibEraser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/eraser_image"
        android:scaleType="fitXY"
        android:src="@drawable/eraser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibBrush"
        app:layout_constraintTop_toBottomOf="@id/llPaintColors" />

    <ImageButton
        android:id="@+id/ibBrush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/brush_image"
        android:scaleType="fitXY"
        android:src="@drawable/brush"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibEraser"
        app:layout_constraintTop_toBottomOf="@id/llPaintColors" />

</androidx.constraintlayout.widget.ConstraintLayout>